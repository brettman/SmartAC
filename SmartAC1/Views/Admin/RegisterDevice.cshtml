@model SmartAC1.Core.Models.Device

@{
    ViewData["Title"] = "RegisterDevice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>RegisterDevice</h1>

<h4>Device</h4>
<hr />
